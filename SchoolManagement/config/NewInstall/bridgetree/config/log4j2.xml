	    </RollingFile> 
	    
    </Appenders> 
    
    <Loggers> 
		<Logger name="ClientAPI" level="debug" additivity="false"> 
            <AppenderRef ref="client" /> 
        </Logger> 
        
        <Logger name="ClientService" level="debug" additivity="false"> 
