		    </Policies> 
		    <DefaultRolloverStrategy max="10"/> 
	    </RollingFile> 
	    
	    <RollingFile name="mediaContent" fileName="${sys:logpath}/mediaContent.log"  
             filePattern="${sys:logpath}/mediaContent-%d{yyyy-MM-dd}.log"> 
